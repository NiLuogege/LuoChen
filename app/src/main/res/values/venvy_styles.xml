<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="venvy_videojj_style" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
    </style>

    <!-- 视频控制器属性控件设置 -->

    <style name="venvy_media_controller_SeekBar_Style" parent="android:Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/venvy_video_sdk_seek_progress_bar_bg</item>
        <item name="android:indeterminateDrawable">@drawable/venvy_video_sdk_seek_progress_bar_bg
</item>
        <item name="android:minHeight">5dp</item>
        <item name="android:maxHeight">5dp</item>
        <item name="android:thumb">@drawable/venvy_video_sdk_media_controller_drag_bg</item>
        <item name="android:thumbOffset">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:focusable">true</item>
        <item name="android:max">1000</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!-- 清晰度 -->

</resources>